# DubGift E-commerce Environment Configuration
# Security: This file should NEVER be committed to version control
# Copy this file to .env and update with your actual values

# Environment Settings
ENVIRONMENT=development
DEBUG_MODE=true

# Database Configuration
DB_HOST=localhost
DB_USERNAME=your_db_username
DB_PASSWORD=your_secure_db_password
DB_DATABASE=dubgift_ecommerce
DB_CHARSET=utf8mb4

# Site Configuration
SITE_NAME=DubGift
SITE_URL=https://www.dubgift.com
SITE_EMAIL=info@dubgift.com
ADMIN_EMAIL=admin@dubgift.com
SITE_DESCRIPTION=Luxury Gifts & Home Decor from Premium Brands

# Security Keys (Generate unique keys for each installation)
ENCRYPTION_KEY=your_64_character_encryption_key_here_make_it_very_secure_and_random
PASSWORD_SALT=your_unique_password_salt_here_64_characters_minimum_length_random
CSRF_SECRET=your_csrf_secret_key_here_should_be_at_least_32_characters_long

# Session Configuration
SESSION_LIFETIME=7200
CSRF_TOKEN_EXPIRY=3600

# Security Settings
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=900
LOGIN_RATE_LIMIT=5
LOGIN_RATE_WINDOW=900

# Email Configuration (SMTP)
EMAIL_FROM=sales@dubgift.com
EMAIL_FROM_NAME=DubGift
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
SMTP_ENCRYPTION=tls

# Payment Configuration - Ziina
ZIINA_API_KEY=your_ziina_api_key_here
ZIINA_SECRET_KEY=your_ziina_secret_key_here
ZIINA_SANDBOX=true
ZIINA_TEST_MODE=true

# WhatsApp Integration
WHATSAPP_API_URL=your_whatsapp_api_url
WHATSAPP_API_KEY=your_whatsapp_api_key
WHATSAPP_ADMIN_NUMBER=+971501234567

# File Upload Settings
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf
UPLOAD_PATH=../secure_uploads/
MAX_CART_ITEMS=50

# Currency and Commerce
CURRENCY=AED
CURRENCY_SYMBOL=د.إ
TAX_RATE=5.0
DEFAULT_SHIPPING_COST=25.0
FREE_SHIPPING_THRESHOLD=500.0

# Pagination Settings
PRODUCTS_PER_PAGE=12
ORDERS_PER_PAGE=20
CUSTOMERS_PER_PAGE=25

# Security Note:
# - Never commit this file to version control
# - Use strong, unique passwords and keys
# - Generate encryption keys using: openssl rand -hex 32
# - For production, set ENVIRONMENT=production and DEBUG_MODE=false
